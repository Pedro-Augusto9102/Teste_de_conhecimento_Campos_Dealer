@{
}
@model List<Teste_de_conhecimento_Campos_Dealer.Models.Entities.Produto>
<h1>Clientes</h1>
@if (TempData["AlertMessage"] is not null)
{
    <div class="alert alert-success">
        <strong>Sucesso! </strong>@TempData["AlertMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descrição</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.dscProduto</td>
                <td>R$ @produto.vlrUnitário</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Produto" asp-action="Edit" asp-route-id="@produto.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
