@{
}

@model Teste_de_conhecimento_Campos_Dealer.Models.Entities.Produto

<h1>Editar Produto</h1>

@if (Model is null)
{
    <p>No client was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Descrição</label>
            <input type="text" class="form-control" asp-for="dscProduto" />
        </div>

        <div class="mt-3">
            <label class="form-label">Valor</label>
            <input type="number" class="form-control" asp-for="vlrUnitário" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Produto">Deletar</button>
        </div>
    </form>
}
