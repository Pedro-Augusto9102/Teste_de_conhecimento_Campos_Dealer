@{
}
@model List<Teste_de_conhecimento_Campos_Dealer.Models.Entities.Student>
<h1>Students</h1>
@if(TempData["AlertMessage"] is not null)
{
    <div class="alert alert-success">
        <strong>Sucesso!</strong>@TempData["AlertMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>